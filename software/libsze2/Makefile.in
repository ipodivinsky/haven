NAME = @PACKAGE_NAME@

# Various configurable paths (remember to edit Makefile.in, not Makefile)
prefix = @prefix@
exec_prefix = @exec_prefix@
datarootdir = @datarootdir@
datadir = @datadir@
bindir = @bindir@
includedir = @includedir@
libdir =  @libdir@
mandir = @mandir@

CC = @CC@
LN_S = @LN_S@
DOXYGEN = @DOXYGEN@
DOXYGEN_CONFIG = Doxyfile
DOXYGEN_DIR = doxygen
RPMBUILD = @RPMBUILD@
LDCONFIG = ldconfig
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@
RPMDIR = RPMBUILD
LIBCOMMLBR_LIBS = @LIBCOMMLBR_LIBS@
LIBCOMMLBR_CFLAGS = @LIBCOMMLBR_CFLAGS@
LIBS = @LIBS@
CFLAGS = -Wall @CFLAGS@ -fPIC
CPPFLAGS = @CPPFLAGS@

OBJDIR= .obj
VERSION = $(shell cut -f1 ./VERSION | tr -d '\n')
MAJOR_VER = $(shell echo $(VERSION) | cut -d. -f1)
RELEASE = @RELEASE@

TOPDIR = @CONFIGURE_PWD@
SUBDIRS = tools/sze2bufferdump/

SRCS =	common.c \
	read.c \
	write.c

HDRS_PUBL = libsze2.h

HDRS_PRIV = private.h

OBJS = $(SRCS:%.c=$(OBJDIR)/%.o)

all: $(NAME).a $(NAME).so $(SUBDIRS)

.PHONY: $(SUBDIRS)

$(SUBDIRS):
	$(MAKE) -C $@

.PHONY: doc
doc: doxygen

$(NAME).a: $(OBJS)
	@rm -f $@
	ar rcs $@ $(OBJS)

$(NAME).so: $(OBJS)
	@rm -f $@;
	$(CC) -shared $(OBJS) $(LIBS) -Wl,-soname -Wl,$@.$(MAJOR_VER) -o $@.$(VERSION);
	@[ ! -L $@.$(MAJOR_VER) ] || rm -rf $@.$(MAJOR_VER);
	$(LN_S) $@.$(VERSION) $@.$(MAJOR_VER);
	@[ ! -L $@ ] || rm -rf $@;
	$(LN_S) $@.$(VERSION) $@;

$(OBJDIR)/%.o: %.c
	@[ -d $$(dirname $@) ] || \
		(mkdir -p $$(dirname $@))
	$(CC) -Wall $(CFLAGS) $(CPPFLAGS) $(INCLUDES) $(DBG) -fPIC -c $< -o $@

doxygen: $(DOXYGEN_CONFIG)
	@if [ -n "$(DOXYGEN)" ]; then \
		(cat $(DOXYGEN_CONFIG); \
		echo 'OUTPUT_DIRECTORY = $(DOXYGEN_DIR)' ) | \
		$(DOXYGEN) - > /dev/null 2>&1; \
	else \
		echo "Missing doxygen"; \
		exit 1; \
	fi

.PHONY: dist
dist: $(NAME).spec tarball rpm

.PHONY: tarball
tarball: $(SRCS) $(HEADERS)
	@rm -rf $(NAME)-$(VERSION); \
	mkdir $(NAME)-$(VERSION); \
	for i in $(SUBDIRS) ; do $(MAKE) -C $$i tarball-prepare; done; \
	for i in $(SRCS) $(HDRS_PUBL) $(HDRS_PRIV) configure.in configure \
	    Makefile.in VERSION Doxyfile index.txt $(NAME).spec.in $(NAME).pc.in install-sh; do \
		cp $$i $(NAME)-$(VERSION)/$$i; \
	done;
	@rm -rf $(RPMDIR)/SOURCES/; \
	mkdir -p $(RPMDIR)/SOURCES/; \
	tar -c -z -f $(RPMDIR)/SOURCES/$(NAME)-$(VERSION)-$(RELEASE).tar.gz \
	    $(NAME)-$(VERSION); \
	rm -rf $(NAME)-$(VERSION);

.PHONY: rpm
rpm: tarball
	mkdir -p $(RPMDIR)/BUILD $(RPMDIR)/RPMS $(RPMDIR)/SRPMS
	$(RPMBUILD) -ba $(NAME).spec \
		--define "_topdir `pwd`/$(RPMDIR)";

.PHONY: cleanall
cleanall: clean distclean

.PHONY: distclean
distclean:
	rm -rf $(RPMDIR)

.PHONY: install
install: install-devel install-doc
	[ -d $(DESTDIR)/$(libdir) ] || \
	    (mkdir -p $(DESTDIR)/$(libdir); chmod 755 $(DESTDIR)/$(libdir))
	$(INSTALL_PROGRAM) $(NAME).so.$(VERSION) $(DESTDIR)/$(libdir)/;
	@[ ! -L $(DESTDIR)/$(libdir)/$(NAME).so.$(MAJOR_VER) ] || \
		rm -rf $(DESTDIR)/$(libdir)/$(NAME).so.$(MAJOR_VER);
	$(LN_S) $(NAME).so.$(VERSION) $(DESTDIR)/$(libdir)/$(NAME).so.$(MAJOR_VER);

.PHONY: install-devel
install-devel:
	[ -d $(DESTDIR)/$(libdir) ] || \
	    (mkdir -p $(DESTDIR)/$(libdir); chmod 755 $(DESTDIR)/$(libdir))
	[ -d $(DESTDIR)/$(libdir)/pkgconfig ] || \
	    (mkdir -p $(DESTDIR)/$(libdir)/pkgconfig; chmod 755 $(DESTDIR)/$(libdir)/pkgconfig)
	[ -d $(DESTDIR)/$(includedir) ] || \
	    (mkdir -p $(DESTDIR)/$(includedir); chmod 755 $(DESTDIR)/$(includedir))
	$(INSTALL_PROGRAM) $(NAME).a $(DESTDIR)/$(libdir)/;
	@[ ! -L $(DESTDIR)/$(libdir)/$(NAME).so ] || \
		rm -rf $(DESTDIR)/$(libdir)/$(NAME).so;
	$(LN_S) $(NAME).so.$(VERSION) $(DESTDIR)/$(libdir)/$(NAME).so; \
	for i in $(HDRS_PUBL); do \
		$(INSTALL_DATA) $$i $(DESTDIR)/$(includedir)/$$i; \
	done; \
	$(INSTALL_DATA) $(NAME).pc $(DESTDIR)/$(libdir)/pkgconfig/$(NAME).pc; \
	for i in $(SUBDIRS) ; do \
		$(MAKE) DESTDIR=$(patsubst .%,$(TOPDIR)/.%,$(DESTDIR)) -C $$i install \
		|| exit 1; \
	done

.PHONY: install-doc
install-doc:
	[ -d $(DESTDIR)/$(datadir)/$(NAME)/$(DOXYGEN_DIR) ] || \
		(mkdir -p $(DESTDIR)/$(datadir)/$(NAME)/$(DOXYGEN_DIR); \
		chmod -R 755 $(DESTDIR)/$(datadir)/$(NAME))
	cp -r $(DOXYGEN_DIR)/* $(DESTDIR)/$(datadir)/$(NAME)/$(DOXYGEN_DIR)/;

.PHONY: clean
clean:
	for i in $(SUBDIRS) ; do $(MAKE) -C $$i clean ; done
	rm -rf *.a *.so* $(OBJDIR) doxygen/

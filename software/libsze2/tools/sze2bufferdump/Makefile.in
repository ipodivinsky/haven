PKGNAME = @PACKAGE_NAME@
TARGETS = sze2bufferdump
SRCS = sze2buff_dump.c

# Various configurable paths (remember to edit Makefile.in, not Makefile)
prefix = @prefix@
exec_prefix = @exec_prefix@
datarootdir = @datarootdir@
datadir = @datadir@
bindir = @bindir@
includedir = @includedir@
libdir =  @libdir@
mandir = @mandir@

VERSION = $(shell cut -f1 "@abs_top_srcdir@"/VERSION | tr -d '\n')
TOPDIR = @CONFIGURE_PWD@

CC = @CC@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

LIBCOMMLBR_FLAGS = $(patsubst -I.%,-I$(TOPDIR)/.%,$(patsubst -L.%,-L$(TOPDIR)/.%,$(filter -L% -I%,@LIBCOMMLBR_LIBS@ @LIBCOMMLBR_CFLAGS@))) $(filter-out -L% -I%,@LIBCOMMLBR_LIBS@ @LIBCOMMLBR_CFLAGS@)
LIBSZE2_FLAGS = -L$(TOPDIR) -lsze2

LIBS = $(patsubst -I.%,-I$(TOPDIR)/.%,$(patsubst -L.%,-L$(TOPDIR)/.%,$(filter -L% -I%,@LIBS@))) $(filter-out -L% -I%,@LIBS@)
CFLAGS = $(patsubst -I.%,-I$(TOPDIR)/.%,$(patsubst -L.%,-L$(TOPDIR)/.%,$(filter -L% -I%,@CFLAGS@))) $(filter-out -L% -I%,@CFLAGS@)
CPPFLAGS = $(patsubst -I.%,-I$(TOPDIR)/.%,$(patsubst -L.%,-L$(TOPDIR)/.%,$(filter -L% -I%,@CPPFLAGS@))) $(filter-out -L% -I%,@CPPFLAGS@)

all: $(TARGETS)

# doc target must be present even if no doc is built to avoid error while making rpm package
doc:

sze2bufferdump: $(SRCS)
	$(CC) -Wall $(CFLAGS) $(CPPFLAGS) $(LIBSZE2_FLAGS) $(LIBCOMMLBR_FLAGS) $(DBG) $< -o $@

.PHONY: install
install: $(TARGETS)
	[ -d $(DESTDIR)/$(bindir) ] || \
	    (mkdir -p $(DESTDIR)/$(bindir); chmod 755 $(DESTDIR)/$(bindir))
	$(INSTALL_PROGRAM) $(TARGETS) $(DESTDIR)/$(bindir)/;

.PHONY: clean
clean:
	rm -rf $(TARGETS)

.PHONY: tarball-prepare
tarball-prepare:
	@for i in Makefile.in $(SRCS); do \
		[ -d $(TOPDIR)/$(PKGNAME)-$(VERSION)/tools/$(shell pwd | xargs basename) ] || \
			mkdir -p $(TOPDIR)/$(PKGNAME)-$(VERSION)/tools/$(shell pwd | xargs basename); \
		cp $$i $(TOPDIR)/$(PKGNAME)-$(VERSION)/tools/$(shell pwd | xargs basename)/$$i; \
	done;
